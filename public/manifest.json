{
  "manifest_version": 3,
  "name": "Gemini Summary Extension",
  "version": "1.0",
  "description": "Chrome Extension for summarizing content using the Gemini API.",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "src/background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["src/content.js"]
    }
  ],
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}